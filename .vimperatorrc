nmap J :tabnext<CR>
nmap K :tabprevious<CR>
nmap <C-j> :tabnext<CR>
nmap <C-k> :tabprevious<CR>

nmap <C-h> :back<CR>
nmap <C-l> :forward<CR>

nmap h <Left>
nmap j <Down>
nmap k <Up>
nmap l <Right>

nmap d <C-w>
nmap s ;t

set editor=~/bin/xi
set titlestring=Kitsune

set cpt=l
set defsearch=g

set hintchars="abcdefghijklmnoprstuvwxyz"
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
set focuscontent=true

highlight Hint::after -append font-size: 10pt